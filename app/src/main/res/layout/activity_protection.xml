<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Host.Protection">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Host.Protection">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/appBar"
                style="@style/TARA.toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_back_btn"
                />
        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/protectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            android:text="@string/protectionHeader"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll3Insurance" />

        <LinearLayout
            android:id="@+id/llProtection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            app:layout_constraintTop_toBottomOf="@+id/protectionHeader">

            <RadioGroup
                android:id="@+id/protectionRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/protectionOption1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:text="Basic protection" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:lineHeight="20dp"
                    android:paddingLeft="40dp"
                    android:text="You'll earn 75% of your booking fee" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:lineHeight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="40dp"
                    android:drawablePadding="10dp"
                    android:text="Your car is covered by\n your own insurance"
                    app:drawableLeftCompat="@drawable/ic_check" />
                <RadioButton
                    android:id="@+id/protectionOption2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:text="TARA Shield" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:lineHeight="20dp"
                    android:paddingLeft="40dp"
                    android:text="You'll earn 60% of your booking fee. \nYour car is covered by our commercial \ninsurance" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:lineHeight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="150dp"
                    android:drawablePadding="10dp"
                    android:text="Windows, Mirrors,\nChassis and  tires\ncoverage"
                    app:drawableLeftCompat="@drawable/ic_check" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:lineHeight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="150dp"
                    android:drawablePadding="10dp"
                    android:text="Personal accident\ninsurance"
                    app:drawableLeftCompat="@drawable/ic_check" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:lineHeight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="150dp"
                    android:drawablePadding="10dp"
                    android:text="Towing and roadside\nassistance costs"
                    app:drawableLeftCompat="@drawable/ic_check" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:lineHeight="20dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="150dp"
                    android:drawablePadding="10dp"
                    android:text="Up to PHP 1,000,000\ncoverage"
                    app:drawableLeftCompat="@drawable/ic_check" />
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/protectionNextBtn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="40dp"
            android:text="NEXT"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

